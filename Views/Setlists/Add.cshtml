@model RealTime.Models.ViewModels.AddSetlistViewModel
@{
    ViewData["Title"] = "Add a Setlist";
}

<h2>@ViewData["Title"].</h2>
<div class="row">
    <div class="col-md-12">
        <section>
            <form asp-controller="Setlists" asp-action="Add" method="post" class="form-horizontal">
                <h4>Add a new Setlist.</h4>
                <hr />
                <!--<div asp-validation-summary="All" class="text-danger"></div>-->
                <div class="form-group">
                    <label asp-for="Name" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Theme" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="Theme" class="form-control" />
                        <span asp-validation-for="Theme" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group well questions">
                @for (var i = 0; i < Model.Questions.Count; i++) {
                    <div class="col-md-12 question">
                        @Html.EditorFor(model => model.Questions[i])
                    </div>
                }
                </div>
                <div class="form-group">
                    <div class="col-md-10">
                        <button type="submit" class="btn btn-default">Save Setlist</button>
                    </div>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}